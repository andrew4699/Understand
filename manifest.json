{
	"manifest_version": 2,

	"name": "Understand",
	"description": "Optical character recognition for PDF files",
	"version": "0.0.1",

	"browser_action":
	{
		"default_popup": "understand.html"
	},

	"content_scripts":
	[
		{
			"js":
			[
				"js/api.js",
				"js/utils.js",
				"js/background.js"
			],
			"matches": ["<all_urls>"]
		}
	],

	"permissions":
	[
		"activeTab",
    	"http://localhost/"
	]
}