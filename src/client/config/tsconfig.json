{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "release/web",
      "module": "esnext",
      "target": "es2016",
      "lib": ["es7", "dom"],
      "sourceMap": true,
      "allowJs": false,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": false,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "js/**/*"
    ],
    "exclude": [
      "node_modules",
      "!node_modules/@types",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts",
      "public/esper.js",
      "config"
    ]
  }
  