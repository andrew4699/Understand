{
	"manifest_version": 2,

	"name": "Understand",
	"description": "Optical character recognition for PDF files",
	"version": "0.0.1",

	"browser_action":
	{
		"default_popup": "understand.html"
	},

	"background":
	{
		"scripts": ["js/background.js"],
		"persistent": false
	},

	"content_scripts":
	[
		{
			"js":
			[
				"js/structures/VisibleElement.js",
				"js/structures/Pixel.js",
				"js/structures/Zone.js",
				"js/structures/TextZone.js",
				"js/structures/Base64Image.js",
				"js/structures/UnderstandAPI.js",
				"js/structures/SearchBar.js",
				"js/utils.js",
				"js/pdfscript.js",
				"js/search.js"
			],
			"matches": ["<all_urls>"]
		}
	],

	"permissions":
	[
		"tabs",
		"activeTab",
    	"http://localhost/",
    	"<all_urls>"
	]
}